@model HotelMNG.Models.BlogPost

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Delete Blog Post</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Delete Blog Post</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Delete Blog Post</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail">Title:</label>
                                @Html.DisplayFor(model => model.Title)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Alias:</label>
                                @Html.DisplayFor(model => model.Alias)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Image:</label>
                                <img src="@Model.Image" alt="Blog Image" style="width: 100px; height: auto;" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Created At:</label>
                                @Html.DisplayFor(model => model.CreatedAt)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Category:</label>
                                @Html.DisplayFor(model => model.Category)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Content:</label>
                                @Html.DisplayFor(model => model.Content)
                            </div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="BlogPostId" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </form>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
