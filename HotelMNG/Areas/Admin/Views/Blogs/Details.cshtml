@model HotelMNG.Models.BlogPost

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chi tiết bài viết</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Chi tiết bài viết</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Chi tiết bài viết</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail">Tiêu đề:</label>
                                @Html.DisplayFor(model => model.Title)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Alias:</label>
                                @Html.DisplayFor(model => model.Alias)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Hình ảnh:</label>
                                <img src="@Model.Image" alt="Blog Image" style="width: 100px; height: auto;" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Ngày tạo:</label>
                                @Html.DisplayFor(model => model.CreatedAt)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Danh mục:</label>
                                @Html.DisplayFor(model => model.Category)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Nội dung:</label>
                                @Html.DisplayFor(model => model.Content)
                            </div>
                            <div class="card-footer">
                                <a asp-action="Edit" asp-route-id="@Model.BlogPostId" class="btn btn-primary">Sửa</a>
                                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
