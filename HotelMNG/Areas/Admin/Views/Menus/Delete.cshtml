@model HotelMNG.Models.Menu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xóa menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xóa menu</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail">Tiêu đề:</label>
                                @Html.DisplayFor(model => model.Title)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Đường dẫn:</label>
                                @Html.DisplayFor(model => model.Alias)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Mô tả:</label>
                                @Html.DisplayFor(model => model.Description)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Mức:</label>
                                @Html.DisplayFor(model => model.Levels)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Menu cha:</label>
                                @Html.DisplayFor(model => model.ParentId)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Vị trí:</label>
                                @Html.DisplayFor(model => model.Position)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Hiển thị:</label>
                                @Html.DisplayFor(model => model.IsActive)
                            </div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="MenuId" />
                                <input type="submit" value="Xóa" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                            </form>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                </div>
            </div>
    </section>
</div>
