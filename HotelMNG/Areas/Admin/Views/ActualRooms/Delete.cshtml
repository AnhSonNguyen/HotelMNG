@model HotelMNG.Models.ActualRoom

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xóa phòng</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xóa phòng</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail">Số phòng:</label>
                                @Html.DisplayFor(model => model.RoomNumber)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Loại phòng:</label>
                                @Html.DisplayFor(model => model.RoomType)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Trạng thái:</label>
                                @Html.DisplayFor(model => model.Status)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail">Ghi chú:</label>
                                @Html.DisplayFor(model => model.Notes)
                            </div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ActualRoomId" />
                                <input type="submit" value="Xóa" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                            </form>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                </div>
            </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
