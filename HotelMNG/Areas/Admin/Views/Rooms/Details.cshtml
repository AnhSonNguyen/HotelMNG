@model HotelMNG.Models.Room

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chi tiết phòng</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Chi tiết phòng</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Detail">
                            <input type="hidden" asp-for="RoomId" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">Tên phòng</label>
                                    <p>@Html.DisplayFor(model => model.Name)</p>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label">Giá</label>
                                    <p>@Html.DisplayFor(model => model.Price)</p>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Size" class="control-label">Kích thước</label>
                                    <p>@Html.DisplayFor(model => model.Size)</p>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Capacity" class="control-label">Sức chứa</label>
                                    <p>@Html.DisplayFor(model => model.Capacity)</p>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Bed" class="control-label">Loại giường</label>
                                    <p>@Html.DisplayFor(model => model.Bed)</p>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Image" class="control-label">Hình ảnh</label>
                                    <p><img src="@Model.Image" alt="Room Image" style="width: 100px; height: auto;" /></p>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label">Trạng thái</label>
                                    <p>@Html.DisplayFor(model => model.Status)</p>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            </div>
                        </form>
                        <!-- /.card -->
                    </div>
                    <!--/.col (left) -->
                    <!-- right column -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
