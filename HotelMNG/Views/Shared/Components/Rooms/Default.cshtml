@model IEnumerable<HotelMNG.Models.Room>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="hp-room-item set-bg" data-setbg="@item.Image" style="background-image: url('@item.Image');">
                <div class="hr-text">
                    <h3>@item.Name</h3>
                    <h2>@item.Price$<span>/Pernight</span></h2>
                    <table>
                        <tbody>
                            <tr>
                                <td class="r-o">Size:</td>
                                <td>@item.Size</td>
                            </tr>
                            <tr>
                                <td class="r-o">Capacity:</td>
                                <td>Max person @item.Capacity</td>
                            </tr>
                            <tr>
                                <td class="r-o">Bed:</td>
                                <td>@item.Bed</td>
                            </tr>
                            <tr>
                                <td class="r-o">Status:</td>
                                <td>@item.Status</td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="#" class="primary-btn">More Details</a>
                </div>
            </div>
        </div>
    }
</div>

