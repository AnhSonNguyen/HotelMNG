<!-- Thêm đoạn mã JavaScript vào đây -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        $('#booking-form').on('submit', function(event) {
            event.preventDefault();

            // Kiểm tra xem tất cả các trường đã được điền đầy đủ
            var checkInDate = $('#date-in').val();
            var checkOutDate = $('#date-out').val();
            var room = $('#room').val();

            if (!checkInDate || !checkOutDate || !room) {
                $('#message').html('<div class="alert alert-danger">Please fill in all the required fields.</div>');
                return;
            }

            $.ajax({
                url: '/Booking/SubmitBooking',
                type: 'POST',
                data: $(this).serialize(),
                success: function(response) {
                    if (response.success) {
                        $('#message').html('<div class="alert alert-success">Booking successful! Your room is available.</div>');
                        // Xóa thông tin trong form sau khi đặt phòng thành công
                        $('#booking-form')[0].reset();
                    } else {
                        $('#message').html('<div class="alert alert-danger">' + response.message + '</div>');
                        // Xóa thông tin trong form sau khi đặt phòng thất bại
                        $('#booking-form')[0].reset();
                    }
                },
                error: function(xhr, status, error) {
                    $('#message').html('<div class="alert alert-danger">Booking failed. Please try again.</div>');
                    // Xóa thông tin trong form sau khi đặt phòng thất bại
                    $('#booking-form')[0].reset();
                }
            });
        });
    });
</script>

